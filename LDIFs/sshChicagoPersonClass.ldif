changetype: modify
add: attributetypes
attributetypes: ( 1.2.3.4.5.6.76 NAME 'isFederated' DESC 'Member is part of a hackerspace federation' SYNTAX 1.3.6.1.4.1.1466.115.121.1.7 SINGLE-VALUED)

# List of hackerspaces member is federated with
dn: cn=schema
